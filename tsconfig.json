{
  "compilerOptions": {
    "target": "es5",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": false,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "baseUrl": ".",
    "jsx": "preserve",
    "paths": {
      "@/components/*": ["app/core/components/*"],
      "@/hooks/*": ["app/core/hooks/*"],
      "@/navs/*": ["app/core/navs/*"],
      "@/layouts/*": ["app/core/layouts/*"],
      "@/styles/*": ["app/core/styles/*"],
      "@/utils/*": ["app/core/utils/*"]
    }
  },
  "include": ["blitz-env.d.ts", "**/*.ts", "**/*.tsx"],
  "exclude": ["node_modules"]
}
